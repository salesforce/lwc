{
    "compilerOptions": {
        // "experimentalDecorators": true,
        "strict": true,

        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        // "sourceMap": true, // Generate source map file
        "inlineSourceMap": true, // Embed source map in the compiled JS
        "inlineSources": true, // Include original TS in source map

        // To suppress issues with @types/jest + @types/mocha
        // CAUTION: may also hide other errors
        "skipLibCheck": true,

        "moduleResolution": "node",
        "esModuleInterop": true,

        "target": "ESNext",
        "lib": ["es2021", "DOM"],

        "allowJs": true,
        "checkJs": true,

        "paths": {
            "x/app": ["./src/modules/x/app/app.ts"],
            "x/counter": ["./src/modules/x/counter/counter.ts"],
            "x/multiply": ["./src/modules/x/multiply/multiply.ts"]
        }
    },
    "include": ["src/"],
    "exclude": []
}

{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    // TODO: turn back to true when there are no more js files in the package
    // "declaration": true,
    "rootDir": "src",
    "allowJs": true,
    "outDir": "dist/commonjs",

    // Environment Configuration
    "moduleResolution": "node",

    // Enhance Strictness
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "**/__tests__/*"
  ]
}

{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist/commonjs",
    "declarationDir": "dist/types",

    // Environment Configuration
    "moduleResolution": "node",

    // Enhance Strictness
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "**/__tests__/*"
  ]
}

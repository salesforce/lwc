{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "target": "es2017",
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist/commonjs",
    "declarationDir": "dist/types",
    "moduleResolution": "node",
    "strict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/__tests__"
  ]
}

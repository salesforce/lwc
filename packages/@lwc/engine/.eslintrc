{
    "env": {
        "browser": true
    },

    "globals": {
        "process": true
    },

    "rules": {
        "lwc-internal/no-production-assert": "error"
    },

    "overrides": [
        {
            "files": [
                "**/__tests__/**"
            ],

            "rules": {
                "lwc-internal/no-production-assert": "off"
            }
        },
        {
            "files": [ "src/polyfills/**"],
            "rules": {
                "no-extend-native": "off"
            }
        }
    ]
}

{
    "env": {
        "browser": true
    },

    "globals": {
        "process": true,
        "global": true
    },

    "rules": {
        "no-production-assert": "error",
        "import/no-unresolved": ["error", { "caseSensitive": true }]
    },

    "overrides": [{
        "files": [
            "**/__tests__/**"
        ],

        "rules": {
            "no-production-assert": "off",
            "import/no-unresolved": "off"
        }
    }],

    "settings": {
        "import/resolver": {
            "typescript": {
              "directory": "./tsconfig.json"
            }
        }
    }
}

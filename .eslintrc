{
    "root": true,

    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module"
    },

    "plugins": ["@typescript-eslint"],
    "extends": ["eslint:recommended", "airbnb-base"],

    "env": {
        "es6": true
    },

    "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
            "error",
            { "argsIgnorePattern": "^_" }
        ],
        "indent" : ["error", 4, { "SwitchCase": 1 }],
        "no-useless-constructor": "off",
        "comma-dangle": ["error", {
            "arrays": "ignore",
            "objects": "ignore",
            "imports": "never",
            "exports": "never",
            "functions": "ignore"
        }],
        "func-names": "off",
        "no-param-reassign": "off",
        "no-bitwise": "off",
        "no-plusplus": "off",
        
        // want to enable these after discussion
        "quotes": "off",
        "import/no-extraneous-dependencies": "off",
        "implicit-arrow-linebreak": "off",
        "no-shadow": "off",
        "consistent-return": "off",
        "operator-linebreak": "off",
        "import/order": "off",
        "no-else-return": "off",
        "space-before-function-paren": "off"
    },

    "overrides": [
        {
            "files": [
                "**/__tests__/**",
                "**/__mocks__/**"
            ],

            "env": {
                "jest": true
            }
        },
        {
            "files": [
                "**/scripts/**",
                "**/jest.config.js"
            ],

            "env": {
                "node": true,
                "jest": true
            },

            "rules": {
                "no-console": "off"
            }
        }
    ]
}

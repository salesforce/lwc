{
    "root": true,

    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module"
    },

    "plugins": ["@typescript-eslint"],
    "extends": "eslint:recommended",

    "env": {
        "es6": true
    },

    "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "error"
    },

    "overrides": [
        {
            "files": [
                "**/__tests__/*.js",
                "**/__tests__/*.ts"
            ],

            "env": {
                "jest": true
            }
        }
    ]
}

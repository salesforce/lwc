{
    "root": true,

    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module"
    },

    "plugins": ["@typescript-eslint"],
    "extends": "eslint:recommended",

    "env": {
        "es6": true
    },

    "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
            "error",
            { "argsIgnorePattern": "^_" }
        ],

        "no-buffer-constructor": "error",
        "no-new-require": "error",
        "no-undef-init": "error",
        "no-useless-computed-key": "error",
        "prefer-const": ["error", {
            "destructuring": "any",
            "ignoreReadBeforeAssign": true
          }],
        "template-curly-spacing": "error",
        
        // Want to enable if there is consent
        "no-shadow": "off",
        "no-use-before-define": ["off", { "functions": true, "classes": true, "variables": false }], // 215 violations
        "prefer-arrow-callback": ["off", {
            "allowNamedFunctions": false,
            "allowUnboundThis": true
          }],
        "prefer-template": "off", // 52 violations, template literals not supported in all browsers
    },

    "overrides": [
        {
            "files": [
                "**/__tests__/**",
                "**/__mocks__/**"
            ],

            "env": {
                "jest": true
            }
        },
        {
            "files": [
                "**/scripts/**",
                "**/jest.config.js"
            ],

            "env": {
                "node": true,
                "jest": true
            },

            "rules": {
                "no-console": "off"
            }
        }
    ]
}

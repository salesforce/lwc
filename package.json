{
  "name": "lwc",
  "private": true,
  "description": "Lightning Web Components",
  "scripts": {
    "prepare": "yarn build",
    "clean": "lerna run clean && lerna clean --yes && rm -rf node_modules",
    "lint": "tslint -p tsconfig.json && npm run types",
    "types": "tsc --noEmit",
    "test": "jest --config ./scripts/jest/root.config.js",
    "test:integration": "yarn run build && lerna exec --scope lwc-integration -- yarn sauce",
    "test:performance": "lerna exec --scope benchmark -- best --runner remote",
    "build": "lerna run build --ignore benchmark --ignore lwc-integration",
    "release:ci:npm": "./scripts/release_npm.sh",
    "release:ci:changelog": "./scripts/release_changelog.sh",
    "release:manual": "lerna publish --exact --force-publish=* --registry='https://npm.lwcjs.org' --skip-git",
    "release:beta": "yarn prepare && lerna publish --force-publish=* --registry='https://npm.lwcjs.org' --canary=beta --yes",
    "changelog:generate": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/salesforce/lwc.git"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.49",
    "@babel/plugin-transform-modules-commonjs": "7.0.0-beta.49",
    "@commitlint/cli": "^6.2.0",
    "@commitlint/config-conventional": "^6.1.3",
    "@types/acorn": "~4.0.3",
    "@types/jest": "~23.0.0",
    "@types/node": "8.9.4",
    "babel-core": "~7.0.0-0",
    "babel-preset-minify": "0.5.0-alpha.5a128fd5",
    "commitizen": "~2.9.6",
    "conventional-changelog-cli": "~1.3.5",
    "cz-conventional-changelog": "~2.1.0",
    "glob": "^7.1.2",
    "husky": "^1.0.0-rc.4",
    "jest": "~23.1.0",
    "lerna": "3.0.4",
    "prettier": "~1.10.2",
    "semver": "^5.5.0",
    "tslint": "~5.9.1",
    "typescript": "2.7.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}

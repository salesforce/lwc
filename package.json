{
  "name": "raptor",
  "private": true,
  "description": "Raptor",
  "scripts": {
    "prepare": "yarn run build",
    "clean": "lerna run clean && lerna clean --yes && rm -rf node_modules",
    "lint": "lerna run lint",
    "test": "lerna exec --concurrency 1 -- yarn test",
    "test:integration": "yarn run build && lerna exec --scope lwc-integration -- yarn sauce",
    "test:performance": "lerna exec --scope benchmark -- best --externalStorage='@best/store-aws'",
    "build": "lerna run build --ignore locker-membrane --ignore benchmark --ignore lwc-integration",
    "build:artifacts": "npm run build && npm run build:compiler",
    "build:compiler": "lerna exec --scope lwc-compiler yarn build:umd",
    "build:engine": "lerna run build --scope lwc-engine",
    "start": "yarn build:artifacts && lerna run build --scope lwc-integration && lerna run start --scope lwc-integration",
    "release": "yarn prepare && lerna publish --exact --force-publish=* --registry='https://npm.lwcjs.org' && yarn changelog",
    "release:canary": "yarn prepare && lerna publish --force-publish=* --registry='https://npm.lwcjs.org' --canary --yes",
    "release:internal": "yarn prepare && lerna publish --exact --force-publish=* --skip-git --repo-version `node -pe \"require('./lerna.json').version\"` --yes --registry='https://nexus.soma.salesforce.com/nexus/content/repositories/npmjs-internal/'",
    "release:internalcanary": "yarn prepare && lerna publish --canary --skip-git --yes --registry='https://nexus.soma.salesforce.com/nexus/content/repositories/npmjs-internal/'",
    "changelog": "yarn changelog:generate && yarn changelog:publish",
    "changelog:generate": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "changelog:publish": "git add CHANGELOG.md && git commit -m 'docs(changelog): publish release changelog' && git push"
  },
  "repository": {
    "type": "git",
    "url": "https://git.soma.salesforce.com/lwc/lwc.git"
  },
  "bin": {
    "lwc-compiler": "bin/lwc-compiler-cli.js"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-env": "^1.6.0",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.5",
    "cz-conventional-changelog": "^2.1.0",
    "lerna": "^2.5.1",
    "rimraf": "^2.6.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}

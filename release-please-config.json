{
    "$schema": "./node_modules/release-please/schemas/config.json",
    "packages": {
        ".": {},
        "packages/@lwc/aria-reflection": {},
        "packages/@lwc/babel-plugin-component": {},
        "packages/@lwc/compiler": {},
        "packages/@lwc/engine-core": {},
        "packages/@lwc/engine-dom": {},
        "packages/@lwc/engine-server": {},
        "packages/@lwc/errors": {},
        "packages/@lwc/features": {},
        "packages/@lwc/integration-karma": {},
        "packages/@lwc/integration-tests": {},
        "packages/@lwc/integration-types": {},
        "packages/@lwc/module-resolver": {},
        "packages/@lwc/perf-benchmarks": {},
        "packages/@lwc/perf-benchmarks-components": {},
        "packages/@lwc/rollup-plugin": {},
        "packages/@lwc/shared": {},
        "packages/@lwc/signals": {},
        "packages/@lwc/ssr-compiler": {},
        "packages/@lwc/ssr-runtime": {},
        "packages/@lwc/style-compiler": {},
        "packages/@lwc/synthetic-shadow": {},
        "packages/@lwc/template-compiler": {},
        "packages/@lwc/types": {},
        "packages/@lwc/wire-service": {},
        "packages/lwc": {},
        "playground": {}
    },
    "exclude-paths": ["playground"],
    "include-component-in-tag": false,
    "release-type": "node",
    "plugins": [
        {
            "type": "linked-versions",
            "groupName": "LWC",
            "components": [
                "lwc-monorepo",
                "@lwc/aria-reflection",
                "@lwc/babel-plugin-component",
                "@lwc/compiler",
                "@lwc/engine-core",
                "@lwc/engine-dom",
                "@lwc/engine-server",
                "@lwc/errors",
                "@lwc/features",
                "@lwc/integration-karma",
                "@lwc/integration-tests",
                "@lwc/integration-types",
                "@lwc/module-resolver",
                "@lwc/perf-benchmarks",
                "@lwc/perf-benchmarks-components",
                "@lwc/rollup-plugin",
                "@lwc/shared",
                "@lwc/signals",
                "@lwc/ssr-compiler",
                "@lwc/ssr-runtime",
                "@lwc/style-compiler",
                "@lwc/synthetic-shadow",
                "@lwc/template-compiler",
                "@lwc/types",
                "@lwc/wire-service",
                "lwc",
                "@lwc/playground"
            ]
        },
        {
            "type": "node-workspace",
            "updatePeerDependencies": true
        }
    ]
}

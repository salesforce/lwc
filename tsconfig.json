{
  "compilerOptions": {
    "strict": true,

    "declaration": true,
    "sourceMap": true,

    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "target": "es2018",
    "lib": ["es2018"],

    // Disable automatic inclusion of @types packages
    "types": ["node", "jest"],

    "outDir": "dist",
    "declarationDir": "dist"
  },

  "exclude": [
    "**/__tests__"
  ]
}
